<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/background_light_blue"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <ImageView
        android:id="@+id/ivPart1BgSolid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:src="@drawable/bg_rectangle_part1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPart1BgRectangle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:src="@drawable/bg_rectangle_number_part1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPart1TopicHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abhaya_libre_extra_bold"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:paddingEnd="2dp"
        android:text="Topic Text Friendship"
        android:textColor="@color/background_dark_blue"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivPart1BgRectangle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPart1NumberQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abhaya_libre_extra_bold"
        android:paddingStart="30dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:text="10"
        android:textColor="@color/background_dark_blue"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ivPart1BgRectangle"
        app:layout_constraintTop_toBottomOf="@+id/tvPart1TopicHeading" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abhaya_libre_extra_bold"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="3dp"
        android:text="questions"
        android:textColor="@color/background_dark_blue"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvPart1NumberQuestion"
        app:layout_constraintTop_toBottomOf="@+id/tvPart1TopicHeading" />

    <TextView
        android:id="@+id/tvPart1_OrderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abhaya_libre_extra_bold"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivPart1BgRectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivPart1BgRectangle" />

</androidx.constraintlayout.widget.ConstraintLayout>

